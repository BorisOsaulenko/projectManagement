<Window x:Class="Client.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Authorization" Height="373" Width="286">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="24" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center">Login Form</TextBlock>

        <TextBlock Grid.Row="1" Foreground="Gray" VerticalAlignment="Bottom" Margin="12 0 0 0">email</TextBlock>
        <TextBox Grid.Row="2" x:Name="LoginBox" FontSize="16" Height="30" VerticalAlignment="Top" Margin="12 0 12 12"></TextBox>

        <TextBlock Grid.Row="3" Foreground="Gray" VerticalAlignment="Bottom" Margin="12 0 0 0">password</TextBlock>
        <PasswordBox Grid.Row="4" x:Name="PasswordBox" FontSize="14" Height="30" VerticalAlignment="Top" Margin="12 0 12 12" VerticalContentAlignment="Center"></PasswordBox>

        <Button Grid.Row="5" Background="#424bb4" Foreground="White" Height="30" Margin="12 0 12 12"> Login</Button>

        <Button Grid.Row="6" Background="Transparent" Foreground="#424bb4" FontWeight="Bold" BorderThickness="0"  Height="25" Margin="12 0 12 12" HorizontalAlignment="Left">Registration</Button>
    </Grid>
</Window>
